<%= simple_form_for [@item] do |f| %>
    <div class= "form-inputs">
      <%= f.input :name, required: true %>
      <%= f.input :category, collection: Item::CATEGORIES%>
      <%= f.input :condition, collection: Item::CONDITION %>
      <%= f.input :price, as: :select, collection: [ [5, '1 - 5€'], [10, '6 - 10€'], [20, '11 - 20€'], [50, '21 - 50€'], [100, '51 - 100€'], [150, '+ 100€'] ], label_method: :second, value_method: :first, placeholder: "Price *" %>
      <%= f.input :description, required: true%>
      <%= f.input :photo, as: :file, label: false %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, :"Add", {class:"button-large-items"} %>
    </div>
<% end %>
