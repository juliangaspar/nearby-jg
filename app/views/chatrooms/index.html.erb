<div class="chat-content">
  <h1>My Chats</h1>

  <div class="chat">
    <ul>
      <li class="chat-list"><% @chatrooms.each do | chatroom |%>
        <div class="chat-box">
          <div class="chat-box-text">
            <h3><%= link_to chatroom.name, chatroom_path(chatroom) %> </h3>
          </div>
          <div class="chat-box-avatar">
            <% @other_user = chatroom.participants.find{|participant| participant.user != current_user} %>
              <img src="https://png.pngtree.com/png-vector/20190114/ourlarge/pngtree-vector-avatar-icon-png-image_313572.jpg">

          </div>
        </div>
      <% end %>
      </li>
    </ul>
  </div>
</div>
